{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "./src",
    "paths": {
      "@assets": ["./assets"],
      "@assets/*":["./assets/*"],
      "@components": ["./components"],
      "@components/*":["./components/*"],
      "@navigation": ["./navigation"],
      "@navigation/*":["./navigation/*"],
      "@pages": ["./pages"],
      "@pages/*":["./pages/*"],
      "@store": ["./store"],
      "@store/*":["./store/*"],
      "@storeConfig": ["./storeConfig"],
      "@storeConfig/*":["./storeConfig/*"],
      "@utils": ["./utils"],
      "@utils/*":["./utils/*"],
      "@hooks": ["./hooks"],
      "@hooks/*":["./hooks/*"],
      "@constants": ["./constants"],
      "@constants/*":["./constants/*"],
    },
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
